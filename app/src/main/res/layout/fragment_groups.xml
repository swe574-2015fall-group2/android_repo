<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Groups"
        android:id="@+id/textViewMyGroups"
        android:layout_weight="1"
        android:layout_margin="16dp" />

    <GridView
        android:layout_width="385dp"
        android:layout_height="0dp"
        android:id="@+id/gridViewMyGroups"
        android:layout_weight="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Recommended Groups"
        android:id="@+id/textViewRecommendedGroups"
        android:layout_weight="1"
        android:layout_margin="16dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/gridViewRecommendedGroups"
        android:layout_weight="3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="View All Groups"
        android:id="@+id/buttonViewAllGroups" />

</LinearLayout>
