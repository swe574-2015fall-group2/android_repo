<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/profilepictureback">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewProfilePicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_no_person"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place Holder"
        android:id="@+id/textViewPersonName"
        android:layout_alignBottom="@+id/imageViewProfilePicture"
        android:layout_toEndOf="@+id/imageViewProfilePicture"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white" />
</RelativeLayout>