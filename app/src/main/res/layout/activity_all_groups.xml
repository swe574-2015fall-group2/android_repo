<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/background_login">

    <ProgressBar android:id="@+id/group_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" android:background="@drawable/background_form"
        android:layout_alignParentTop="false" android:layout_gravity="center"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/group_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:id="@+id/gridViewAllGroups"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:layout_margin="16dp"
            android:background="@drawable/background_form"
            android:layout_gravity="center">
        </GridView>
    </LinearLayout>

</FrameLayout>